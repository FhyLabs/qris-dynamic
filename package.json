{
  "name": "@fhylabs/qris-dynamic",
  "version": "1.0.3",
  "description": "Convert static QRIS codes into dynamic QRIS with automatic transaction amount insertion. Supports all Indonesian QRIS providers (EMVCo/Bank Indonesia).",
  "main": "dist/index.js",
  "module": "dist/QRISDynamic.esm.js",
  "browser": "dist/QRISDynamic.umd.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build:ts": "tsc",
    "build:rollup": "tsc -p tsconfig.rollup.json && rollup -c",
    "build": "npm run build:ts && npm run build:rollup",
    "test": "node tests/commonjs.test.js"
  },
  "keywords": [
    "qris",
    "dynamic",
    "static",
    "qr-code",
    "payment",
    "emvco",
    "bank-indonesia",
    "dana",
    "gopay",
    "ovo",
    "shopeepay"
  ],
  "author": "Fhylabs <cs@fhylabs.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/FhyLabs/qris-dynamic.git"
  },
  "bugs": {
    "url": "https://github.com/FhyLabs/qris-dynamic/issues"
  },
  "homepage": "https://github.com/FhyLabs/qris-dynamic#readme",
  "dependencies": {
    "canvas": "^3.2.1",
    "jimp": "^1.6.0",
    "qrcode": "^1.5.4",
    "qrcode-reader": "^1.0.4"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/node": "^25.0.7",
    "@types/qrcode": "^1.5.6",
    "rollup": "^4.55.1",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18"
  }
}
